

<h2>Login</h2>

{{#if error}}
<p class="error">{{error}}</p>
{{/if}}

<form method="POST" action="/login" class="form">
    <label>Email</label>
    <input type="email" name="email" required />

    <label>Password</label>
    <input type="password" name="password" required />

    <button type="submit">Login</button>
</form>
